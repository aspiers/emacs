me=`basename $0`

usage () {
    # Call as: usage [EXITCODE] [USAGE MESSAGE]
    exit_code=1
    if [[ "$1" == [0-9] ]]; then
        exit_code="$1"
        shift
    fi
    if [ -n "$1" ]; then
      echo "$*" >&2
      echo
    fi

    cat <<EOF >&2
Usage: $me <field "[options]"> <field "ARGS">
Options:
<field "options">
EOF
    exit "$exit_code"
}

if [ "$1" == '-h' ] || [ "$1" == '--help' ]; then
  usage 0
fi
