#!/bin/bash

create_frame=
while [ $# != 0 ]; do
    case "$1" in
        -c|--create-frame)
            create_frame=$1
            shift
            ;;
        *)
            break
            ;;
    esac
done

here=$(pwd)

for file in "$@"; do
    if [[ $file =~ ^\.\.?/ ]]; then
        file="$here/$file"
    fi

    quick-emacs \
        --bg-if-poss $create_frame \
        --eval "(find-file-with-location \"$file\")"
done
